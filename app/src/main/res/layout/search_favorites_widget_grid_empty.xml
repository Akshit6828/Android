<LinearLayout android:id="@+id/emptyGridViewContainer"
    android:layout_marginTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/noFavoritesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/warGreyTwo"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="No favorites added yet"/>

    <TextView
        android:id="@+id/addFavoriteText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/cornflowerBlue"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Add favorites"/>
</LinearLayout>